<phpunit colors="true" bootstrap="tests/bootstrap.php">
	<testsuite name="Epic-Mongo">
		<directory>tests/</directory>
	</testsuite>

	<filter>
		<blacklist>
			<directory suffix=".php">tests</directory>
		</blacklist>
	</filter>

	<logging>
		<log highlowerbound="80" lowupperbound="50" highlight="true" yui="true" charset="UTF-8" target="tests/output" type="coverage-html">
		<log target="tests/output/testdox.html" type="testdox-html">
	</log></log></logging>
</phpunit>
